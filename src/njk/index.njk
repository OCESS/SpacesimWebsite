{% set title = 'Home' %}
{% extends "layout.njk" %}

{% block content %}

  <!-- navbar -->
  {{nav.active('home')}}
  <!-- end navbar -->

  <!-- carousel -->
  <div id="home-carousel" class="carousel slide" data-ride="carousel">

    <!-- carousel indicators -->
    <ol class="carousel-indicators">
      <li data-target="#home-carousel" data-slide-to="0" class="active"></li>
      <li data-target="#home-carousel" data-slide-to="1"></li>
      <li data-target="#home-carousel" data-slide-to="2"></li>
    </ol>
    <!-- end carousel indicators -->

    <!-- carousel slides -->
    <div class="carousel-inner" role="listbox">
      <div class="item active">
        <img src="http://placehold.it/2440x720" alt="...">
        <div class="carousel-caption"></div>
      </div>
      <div class="item">
        <img src="http://placehold.it/2440x720" alt="...">
        <div class="carousel-caption"></div>
      </div>
      <div class="item">
        <img src="http://placehold.it/2440x720" alt="...">
        <div class="carousel-caption"></div>
      </div>
    </div>
    <!-- end carousel slides -->

    <!-- carousel controls -->
    <!-- left -->
    <a class="left carousel-control" href="#home-carousel" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>

    <!-- right -->
    <a class="right carousel-control" href="#home-carousel" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
    <!-- end carousel controls -->
  </div>
  <!-- end carousel -->

  <!-- main container -->
  <div class="container-fluid">

    <!-- description -->
    <div class="col-md-6 col-md-offset-3">
      <div class="page-header">
        <h1 class="text-center">What is OCESS?</h1>
      </div>
      <h4 class="text-center">The Ottawa Carleton Educational Space Simulation is a non-profit organization that is dedicated to teaching people about space, as well as fostering a love and respect of the "final frontier".</h4>
    </div>
    <!-- end description -->

  </div>
  <!-- end main container -->
  
{% endblock %}

